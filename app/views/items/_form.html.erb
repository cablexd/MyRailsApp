<%= form_with model: item do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>

    <div>
        <%= form.label :complete %>
        <%= form.checkbox :complete %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>